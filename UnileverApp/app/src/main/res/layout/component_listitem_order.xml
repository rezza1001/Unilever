<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/size_2dp"
        android:paddingBottom="@dimen/size_2dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txvw_key_00"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16sp"
            android:paddingRight="@dimen/size_10dp"
            android:textColor="@color/text_grey_dark"
            android:text="XXXX" />

        <TextView
            android:id="@+id/txvw_qty_00"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16sp"
            android:maxLines="1"
            android:paddingRight="@dimen/size_10dp"
            android:textColor="@color/text_grey_dark"
            android:text="0" />


        <TextView
            android:id="@+id/txvw_value_00"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16sp"
            android:textColor="@color/text_black"
            android:text="000.000.00" />

        <TextView
            android:id="@+id/txvw_total_00"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16sp"
            android:textColor="@color/text_black"
            android:text="000.000.00" />

    </LinearLayout>

</LinearLayout>
