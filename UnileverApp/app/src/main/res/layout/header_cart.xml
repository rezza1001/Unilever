<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lnly_header_00"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp"
        android:weightSum="10"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvw_back_00"
            android:paddingBottom="@dimen/size_3dp"
            android:scaleType="fitStart"
            android:paddingTop="@dimen/size_3dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/txvw_title_00"
            android:textSize="@dimen/size_18sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:maxLines="1"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="BRAND" />

        <RelativeLayout
            android:id="@+id/rvly_notif_00"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rvly_notif_counter_00"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_oval_orange"
                android:layout_marginTop="@dimen/size_2dp"
                android:layout_marginRight="@dimen/size_3dp"
                android:layout_width="@dimen/size_22dp"
                android:layout_height="@dimen/size_22dp">
                <TextView
                    android:id="@+id/txvw_notif_00"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imvw_notif_00"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:paddingRight="@dimen/size_10dp"
                app:srcCompat="@drawable/ic_notifications_white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rvly_cart_00"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rvly_cart_counter_00"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_oval_orange"
                android:layout_marginTop="@dimen/size_2dp"
                android:layout_marginRight="@dimen/size_3dp"
                android:layout_width="@dimen/size_22dp"
                android:layout_height="@dimen/size_22dp">
                <TextView
                    android:id="@+id/txvw_counter_00"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imvw_cart_00"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:paddingRight="@dimen/size_10dp"
                app:srcCompat="@drawable/ic_cart_white" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
