<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SummaryOrderActivity">

    <LinearLayout
        android:id="@+id/lnly_header_00"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txvw_title_00"
            android:layout_marginLeft="@dimen/size_1dp"
            android:textSize="@dimen/size_18sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALES ORDER" />
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/lnly_header_00"
        android:layout_above="@+id/bbtn_action_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/size_10dp"
                android:paddingTop="@dimen/size_10dp"
                android:textColor="@color/text_black"
                android:text="SALES ORDER" />

            <RelativeLayout
                android:background="@color/text_grey"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_height="@dimen/size_1dp"/>

            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_order_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_date_order_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_outlet_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_term_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_limit_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_note_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_payment_00"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"
                android:paddingTop="@dimen/size_20dp"
                android:textColor="@color/text_black"
                android:text="Detail Order" />

            <g.rezza.moch.unileverapp.component.ListOrder
                android:layout_marginTop="@dimen/size_10sp"
                android:id="@+id/lsvw_order_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bbtn_action_00"
        android:textColor="@color/white_00"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/button_signin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:textAllCaps="false"
        android:textSize="@dimen/size_16sp"
        android:text="@string/close" />

</RelativeLayout>