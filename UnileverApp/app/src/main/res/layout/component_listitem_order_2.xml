<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/size_2dp"
        android:paddingBottom="@dimen/size_2dp"
        android:paddingRight="@dimen/size_10dp"
        android:paddingLeft="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/product"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                android:text=""
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:text="@string/subtotal"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <RelativeLayout
            android:background="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"/>

        <LinearLayout
            android:id="@+id/lnly_body_00"
            android:orientation="vertical"
            android:minHeight="@dimen/size_40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:background="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"/>

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/total_price"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txvw_total_00"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:text="Rp. 1,000,000"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <g.rezza.moch.unileverapp.component.DiscountView
            android:id="@+id/dscv_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
