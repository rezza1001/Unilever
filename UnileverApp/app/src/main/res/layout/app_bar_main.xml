<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rvly_header_00"
        android:background="@color/white_00"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65dp">

        <ImageView
            android:id="@+id/imvw_menu_00"
            android:layout_width="@dimen/size_45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/size_10dp"
            android:layout_height="@dimen/size_35dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/imvw_header_00"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/size_55dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/unilever_icon_01" />


        <RelativeLayout
            android:id="@+id/rvly_notif_00"
            android:layout_width="@dimen/size_65dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/rvly_cart_00">

            <RelativeLayout
                android:id="@+id/rvly_notif_counter_00"
                android:layout_width="@dimen/size_22dp"
                android:layout_height="@dimen/size_22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/size_4dp"
                android:layout_marginTop="@dimen/size_4dp"
                android:background="@drawable/background_oval_orange">

                <TextView
                    android:id="@+id/txvw_notif_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imvw_notif_00"
                android:layout_width="@dimen/size_46dp"
                android:layout_height="@dimen/size_46dp"
                android:layout_centerInParent="true"
                android:paddingRight="@dimen/size_10dp"
                app:srcCompat="@drawable/ic_notifications" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rvly_cart_00"
            android:layout_width="@dimen/size_65dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rvly_cart_counter_00"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_oval_orange"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:layout_width="@dimen/size_22dp"
                android:layout_height="@dimen/size_22dp">
                <TextView
                    android:id="@+id/txvw_counter_00"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imvw_cart_00"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/size_46dp"
                android:layout_height="@dimen/size_46dp"
                android:paddingRight="@dimen/size_10dp"
                app:srcCompat="@drawable/ic_add_shopping_cart" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/imvw_header_00"
            android:background="@color/text_grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"></RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Notitle.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.Notitle.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

</android.support.design.widget.CoordinatorLayout>