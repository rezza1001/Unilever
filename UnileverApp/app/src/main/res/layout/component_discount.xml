<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnly_1"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">

            <TextView
                android:id="@+id/txvw_key_1"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/total_ullage"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txvw_disc_1"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:text="Rp. 0"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnly_2"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">

            <TextView
                android:id="@+id/txvw_key_2"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/total_ullage"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txvw_disc_2"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:text="Rp. 0"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnly_3"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">

            <TextView
                android:id="@+id/txvw_key_3"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/total_ullage"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txvw_disc_3"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:text="Rp. 0"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
