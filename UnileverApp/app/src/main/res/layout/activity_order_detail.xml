<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".OrderDetailActivity">

    <include
        android:id="@+id/incl_header"
        layout="@layout/header_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_below="@+id/incl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:background="@color/text_grey"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_height="@dimen/size_1dp"/>

            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_order_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_date_order_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_status_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_term_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_note_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.unileverapp.component.TextKeyValue
                android:id="@+id/txkv_payment_00"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"
                android:paddingTop="@dimen/size_20dp"
                android:textColor="@color/text_black"
                android:text="@string/detail_order" />

            <g.rezza.moch.unileverapp.component.ListOrder
                android:layout_marginTop="@dimen/size_10sp"
                android:id="@+id/lsvw_order_00"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>