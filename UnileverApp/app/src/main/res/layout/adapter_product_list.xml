<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/size_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnly_top_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvw_product_00"
                android:layout_width="@dimen/size_125dp"
                android:layout_height="@dimen/size_125dp"
                app:srcCompat="@drawable/unilever_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp">

                <TextView
                    android:id="@+id/txvw_description_00"
                    android:textSize="@dimen/size_14sp"
                    android:textColor="@color/text_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="Description" />
                <TextView
                    android:id="@+id/txvw_price_00"
                    android:layout_below="@+id/txvw_description_00"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_16sp"
                    android:textColor="@color/text_orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Rp. 0" />
                <TextView
                    android:id="@+id/txvw_note_00"
                    android:layout_below="@+id/txvw_price_00"
                    android:textSize="@dimen/size_12sp"
                    android:textColor="@color/text_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="(Harga belum termasuk PPN)" />

                <Button
                    android:id="@+id/bbtn_action_00"
                    android:visibility="visible"
                    android:textColor="@color/white_00"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:background="@drawable/button_signin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/size_16sp"
                    android:text="@string/buy" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
