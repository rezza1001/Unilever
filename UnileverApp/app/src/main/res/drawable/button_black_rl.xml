<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"  />
            <solid android:color="@color/button_black_active"/>
            <stroke android:width="0dp"
                android:color="@color/button_black_active" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/button_black_active"/>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <stroke android:width="0dp"
                android:color="@color/button_black_active" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/button_black"/>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <stroke android:width="0dp"
                android:color="@color/button_black" />
        </shape>
    </item>
</selector>